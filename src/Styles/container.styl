* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  margin: 0;
  padding: 0;
  height: 100%;
  overflow-y: hidden;
}

body {
  margin: 0;
  padding: 0;
  height: 100%;
  max-height: 100vh;
  -webkit-font-smoothing: antialiased;
  background-image: url(../Assets/backgroundMain.jpg);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

#root {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}